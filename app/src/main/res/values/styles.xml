<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/deep_ocean</item>
        <item name="colorPrimaryDark">@color/deep_ocean</item>
        <item name="colorAccent">@color/coral</item>
        <item name="android:windowBackground">@color/wave_crest</item>
        <item name="android:statusBarColor">@color/deep_ocean</item>
    </style>

    <!-- Custom button style -->
    <style name="OceanButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/ocean_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Card style -->
    <style name="OceanCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources> 